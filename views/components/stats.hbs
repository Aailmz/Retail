<div class="card border shadow-xs card-stats">
  <div class="card-body p-3">
    <div class="row">
      <div class="col-8">
        <div class="numbers">
          <p class="text-sm mb-0 text-uppercase font-weight-bold">{{title}}</p>
          <h5 class="font-weight-bolder mb-0">{{value}}</h5>
          <p class="mb-0 {{#if isPositive}}text-success{{else}}text-danger{{/if}}">
            <span class="font-weight-bolder">{{changeValue}}</span> {{changeText}}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>