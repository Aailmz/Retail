<div class="row mb-4">
  <div class="col-xl-3 col-md-6 mb-4">
    {{> stats-card 
      title="Total Products" 
      value="350" 
      changeValue="+12%" 
      changeText="this month" 
      isPositive=true
    }}
  </div>
  
  <div class="col-xl-3 col-md-6 mb-4">
    {{> stats-card 
      title="Total Sales" 
      value="$53,000" 
      changeValue="+8%" 
      changeText="this week" 
      isPositive=true
    }}
  </div>
  
  <div class="col-xl-3 col-md-6 mb-4">
    {{> stats-card 
      title="New Orders" 
      value="45" 
      changeValue="-3%" 
      changeText="since yesterday" 
      isPositive=false
    }}
  </div>
  
  <div class="col-xl-3 col-md-6 mb-4">
    {{> stats-card 
      title="Active Users" 
      value="2,300" 
      changeValue="+5%" 
      changeText="this month" 
      isPositive=true
    }}
  </div>
</div>

<div class="row">
  <div class="col-lg-8 mb-4">
    <div class="card border shadow-xs">
      <div class="card-header border-bottom pb-0">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
          <div class="mb-3 mb-md-0">
            <h6 class="font-weight-semibold text-lg mb-0">Recent Sales Overview</h6>
            <p class="text-sm mb-0">Monthly sales performance</p>
          </div>
          <div class="d-flex">
            <button type="button" class="btn btn-sm btn-white me-2">
              View Report
            </button>
            <button type="button" class="btn btn-sm btn-dark">
              Export Data
            </button>
          </div>
        </div>
      </div>
      <div class="card-body px-0 py-0">
        <div class="table-responsive p-0">
          <table class="table align-items-center justify-content-center mb-0">
            <thead class="bg-gray-100">
              <tr>
                <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-3">Product</th>
                <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-2">Category</th>
                <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-2">Sales</th>
                <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-2 text-center">Status</th>
                <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-2">Last Updated</th>
              </tr>
            </thead>
            <tbody>
              {{#each products}}
                <tr>
                  <td>
                    <div class="d-flex px-3">
                      <div class="my-auto">
                        <h6 class="mb-0 text-sm">{{name}}</h6>
                      </div>
                    </div>
                  </td>
                  <td>
                    <p class="text-sm font-weight-normal mb-0">{{category}}</p>
                  </td>
                  <td>
                    <p class="text-sm font-weight-normal mb-0">{{sales}}</p>
                  </td>
                  <td class="align-middle text-center">
                    <div class="d-flex align-items-center justify-content-center">
                      <span class="badge bg-{{statusColor}}">{{status}}</span>
                    </div>
                  </td>
                  <td>
                    <p class="text-sm font-weight-normal mb-0">{{lastUpdated}}</p>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-lg-4 mb-4">
    <div class="card border shadow-xs h-100">
      <div class="card-header border-bottom pb-0">
        <h6 class="font-weight-semibold text-lg mb-0">Quick Actions</h6>
        <p class="text-sm mb-0">Commonly used functions</p>
      </div>
      <div class="card-body">
        <div class="list-group">
          {{#each quickActions}}
            <a href="{{link}}" class="list-group-item list-group-item-action border-0 py-3">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="mb-1 font-weight-semibold">{{title}}</h6>
                  <p class="mb-0 text-sm">{{description}}</p>
                </div>
                {{{icon}}}
              </div>
            </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>