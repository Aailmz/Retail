<!-- views/products/show.hbs -->
<div class="container-fluid px-4">
  <div class="row">
    <div class="col-12 mb-4">
      <div class="card border shadow-xs">
        <div class="card-header border-bottom pb-0">
          <div class="d-sm-flex align-items-center">
            <div>
              <h6 class="font-weight-semibold text-lg mb-0">Product Details</h6>
              <p class="text-sm mb-sm-0">View product information</p>
            </div>
            <div class="ms-auto d-flex">
              <a href="/products" class="btn btn-sm btn-white me-2">
                Back to Products
              </a>
              <a href="/products/{{product.id}}/edit" class="btn btn-sm btn-primary me-2">
                Edit
              </a>
              <form action="/products/{{product.id}}/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this product?');">
                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="card bg-gray-100 shadow-none mb-4">
                <div class="card-body p-3">
                  <h6 class="text-sm mb-1">Product Name</h6>
                  <p class="mb-0 font-weight-bold">{{product.name}}</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card bg-gray-100 shadow-none mb-4">
                <div class="card-body p-3">
                  <h6 class="text-sm mb-1">Product Code</h6>
                  <p class="mb-0 font-weight-bold">{{product.productCode}}</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="row mb-4">
            <div class="col-md-4">
              <div class="card bg-gray-100 shadow-none mb-4">
                <div class="card-body p-3">
                  <h6 class="text-sm mb-1">Cost Price</h6>
                  <p class="mb-0 font-weight-bold">${{product.costPrice}}</p>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card bg-gray-100 shadow-none mb-4">
                <div class="card-body p-3">
                  <h6 class="text-sm mb-1">Selling Price</h6>
                  <p class="mb-0 font-weight-bold">${{product.sellingPrice}}</p>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card bg-gray-100 shadow-none mb-4">
                <div class="card-body p-3">
                  <h6 class="text-sm mb-1">Stock</h6>
                  <p class="mb-0 font-weight-bold">{{product.stock}} units</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="card bg-gray-100 shadow-none mb-4">
                <div class="card-body p-3">
                  <h6 class="text-sm mb-1">Category</h6>
                  <p class="mb-0 font-weight-bold">{{product.category.name}}</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card bg-gray-100 shadow-none mb-4">
                <div class="card-body p-3">
                  <h6 class="text-sm mb-1">Profit Margin</h6>
                  <p class="mb-0 font-weight-bold">
                    {{#with product}}
                      {{profitMargin sellingPrice costPrice}}%
                    {{/with}}
                  </p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="card bg-gray-100 shadow-none">
            <div class="card-body p-3">
              <h6 class="text-sm mb-1">Description</h6>
              <p class="mb-0">{{product.description}}</p>
            </div>
          </div>
          
          <div class="row mt-4">
            <div class="col-md-6">
              <div class="card bg-gray-100 shadow-none">
                <div class="card-body p-3">
                  <h6 class="text-sm mb-1">Created At</h6>
                  <p class="mb-0">{{formatDate product.createdAt}}</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card bg-gray-100 shadow-none">
                <div class="card-body p-3">
                  <h6 class="text-sm mb-1">Last Updated</h6>
                  <p class="mb-0">{{formatDate product.updatedAt}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>