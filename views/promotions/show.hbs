<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>{{title}}</title>
  
  <!-- Fonts and icons -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Noto+Sans:300,400,500,600,700,800|PT+Mono:300,400,500,600,700" rel="stylesheet" />
  
  <!-- CSS Files -->
  <link id="pagestyle" href="/css/corporate-ui-dashboard.css" rel="stylesheet" />
  
  {{> style}}
</head>

<body class="bg-gray-100">
  {{> sidebar}}
  <!-- Main Content -->
  <div class="main-content bg-gray-100">
    <nav class="navbar navbar-expand-lg mb-4 p-3">
      <div class="container-fluid px-0">
        <div class="d-flex align-items-center">
          <button class="menu-toggle" id="menuToggle">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="3" y1="12" x2="21" y2="12"></line>
              <line x1="3" y1="6" x2="21" y2="6"></line>
              <line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
          </button>
          <h4 class="font-weight-bold mb-0">Promotion Details</h4>
        </div>
        <div class="ms-auto">
          <span class="font-weight-bold d-none d-sm-inline">Welcome, {{user.username}}</span>
          <span class="d-inline d-sm-none">{{user.username}}</span>
        </div>
      </div>
    </nav>

    {{> notification}}
    
    <!-- Promotion Details Content -->
    <div class="container-fluid px-4">
      <div class="row">
        <div class="col-12 mb-4">
          <div class="card border shadow-xs">
            <div class="card-header border-bottom pb-0">
              <div class="d-flex justify-content-between align-items-center">
                <h6 class="font-weight-semibold text-lg mb-0">{{promotion.name}}</h6>
                <div>
                  <a href="/promotions/{{promotion.id}}/edit" class="btn btn-sm btn-primary me-2">Edit</a>
                  <a href="/promotions" class="btn btn-sm btn-secondary">Back to List</a>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <h6 class="text-sm mb-1">Promotion ID</h6>
                  <p class="mb-3">{{promotion.id}}</p>
                  
                  <h6 class="text-sm mb-1">Name</h6>
                  <p class="mb-3">{{promotion.name}}</p>
                  
                  <h6 class="text-sm mb-1">Type</h6>
                  <p class="mb-3">
                    {{#if (eq promotion.type "buy_x_get_y")}}
                      Buy X Get Y
                    {{else if (eq promotion.type "discount_percentage")}}
                      Discount Percentage
                    {{else if (eq promotion.type "bundle")}}
                      Bundle Deal
                    {{else}}
                      {{promotion.type}}
                    {{/if}}
                  </p>
                  
                  <h6 class="text-sm mb-1">Description</h6>
                  <p class="mb-3">{{promotion.description}}</p>
                </div>
                <div class="col-md-6">
                  <h6 class="text-sm mb-1">Status</h6>
                  <p class="mb-3">
                    <span class="badge 
                      {{#if (eq promotion.status "active")}}
                        bg-success
                      {{else if (eq promotion.status "inactive")}}
                        bg-secondary
                      {{else if (eq promotion.status "scheduled")}}
                        bg-info
                      {{else if (eq promotion.status "expired")}}
                        bg-danger
                      {{/if}}">
                      {{capitalize promotion.status}}
                    </span>
                  </p>
                  
                  <h6 class="text-sm mb-1">Start Date</h6>
                  <p class="mb-3">{{formatDateTime promotion.startDate}}</p>
                  
                  <h6 class="text-sm mb-1">End Date</h6>
                  <p class="mb-3">{{formatDateTime promotion.endDate}}</p>
                  
                  <h6 class="text-sm mb-1">Created At</h6>
                  <p class="mb-3">{{formatDateTime promotion.createdAt}}</p>
                </div>
              </div>
              
              <div class="row mt-4">
                <div class="col-md-6">
                  <div class="card border">
                    <div class="card-header">
                      <h6 class="mb-0">Rules</h6>
                    </div>
                    <div class="card-body">
                      <div class="table-responsive">
                        <table class="table align-items-center mb-0">
                          <tbody>
                            {{#if promotion.rules.member_only}}
                            <tr>
                              <td class="ps-1">
                                <p class="text-sm font-weight-bold mb-0">Member Only</p>
                              </td>
                              <td class="text-end pe-1">
                                <span class="badge bg-primary">Yes</span>
                              </td>
                            </tr>
                            {{/if}}
                            
                            {{#if promotion.rules.min_quantity}}
                            <tr>
                              <td class="ps-1">
                                <p class="text-sm font-weight-bold mb-0">Min Quantity</p>
                              </td>
                              <td class="text-end pe-1">
                                <p class="text-sm font-weight-bold mb-0">{{promotion.rules.min_quantity}}</p>
                              </td>
                            </tr>
                            {{/if}}
                            
                            {{#if promotion.rules.buy_product_id}}
                            <tr>
                              <td class="ps-1">
                                <p class="text-sm font-weight-bold mb-0">Buy Product ID</p>
                              </td>
                              <td class="text-end pe-1">
                                <p class="text-sm font-weight-bold mb-0">{{promotion.rules.buy_product_id}}</p>
                              </td>
                            </tr>
                            {{/if}}

                            {{#if promotion.rules.max_quantity}}
                            <tr>
                              <td class="ps-1">
                                <p class="text-sm font-weight-bold mb-0">Max Quantity</p>
                              </td>
                              <td class="text-end pe-1">
                                <p class="text-sm font-weight-bold mb-0">{{promotion.rules.max_quantity}}</p>
                              </td>
                            </tr>
                            {{/if}}

                            {{#if promotion.rules.applicable_days}}
                            <tr>
                              <td class="ps-1">
                                <p class="text-sm font-weight-bold mb-0">Applicable Days</p>
                              </td>
                              <td class="text-end pe-1">
                                <p class="text-sm font-weight-bold mb-0">{{promotion.rules.applicable_days}}</p>
                              </td>
                            </tr>
                            {{/if}}
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="card border">
                    <div class="card-header">
                      <h6 class="mb-0">Configuration</h6>
                    </div>
                    <div class="card-body">
                      <div class="table-responsive">
                        <table class="table align-items-center mb-0">
                          <tbody>
                            {{#if promotion.configuration.free_product_id}}
                            <tr>
                              <td class="ps-1">
                                <p class="text-sm font-weight-bold mb-0">Free Product ID</p>
                              </td>
                              <td class="text-end pe-1">
                                <p class="text-sm font-weight-bold mb-0">{{promotion.configuration.free_product_id}}</p>
                              </td>
                            </tr>
                            {{/if}}
                            
                            {{#if promotion.configuration.applied_markup_value}}
                            <tr>
                              <td class="ps-1">
                                <p class="text-sm font-weight-bold mb-0">Applied Markup Value</p>
                              </td>
                              <td class="text-end pe-1">
                                <p class="text-sm font-weight-bold mb-0">{{promotion.configuration.applied_markup_value}}%</p>
                              </td>
                            </tr>
                            {{/if}}

                            {{#if promotion.configuration.buy_count}}
                            <tr>
                              <td class="ps-1">
                                <p class="text-sm font-weight-bold mb-0">Buy Count</p>
                              </td>
                              <td class="text-end pe-1">
                                <p class="text-sm font-weight-bold mb-0">{{promotion.configuration.buy_count}}</p>
                              </td>
                            </tr>
                            {{/if}}

                            {{#if promotion.configuration.get_count}}
                            <tr>
                              <td class="ps-1">
                                <p class="text-sm font-weight-bold mb-0">Get Count</p>
                              </td>
                              <td class="text-end pe-1">
                                <p class="text-sm font-weight-bold mb-0">{{promotion.configuration.get_count}}</p>
                              </td>
                            </tr>
                            {{/if}}
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="d-flex justify-content-between mt-4">
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-{{promotion.id}}">
                  Delete Promotion
                </button>
                <a href="/promotions/{{promotion.id}}/edit" class="btn btn-primary">Edit Promotion</a>
              </div>
              
              {{> delete
                id=promotion.id
                itemType="promotion"
                itemName=promotion.name
                route="promotions"
              }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Core JS Files -->
  <script src="/js/core/popper.min.js"></script>
  <script src="/js/core/bootstrap.min.js"></script>

  {{> script}}
</body>
</html>