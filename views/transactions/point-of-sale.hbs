<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Point of Sale</title>
  
  <!-- Fonts and icons -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Noto+Sans:300,400,500,600,700,800|PT+Mono:300,400,500,600,700" rel="stylesheet" />
  
  <!-- CSS Files -->
  <link id="pagestyle" href="/css/corporate-ui-dashboard.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  {{> style}}
  
  <style>
    /* Custom scrollable containers */
    .products-scrollable-container {
      height: calc(100vh - 250px);
      overflow-y: auto;
      padding-right: 5px;
    }
    
    .cart-container {
      height: 350px;
      overflow-y: auto;
      border-bottom: 1px solid #e9ecef;
    }
    
    /* Scrollbar styling */
    .products-scrollable-container::-webkit-scrollbar,
    .cart-container::-webkit-scrollbar {
      width: 6px;
    }
    
    .products-scrollable-container::-webkit-scrollbar-track,
    .cart-container::-webkit-scrollbar-track {
      background: #f1f1f1;
      border-radius: 4px;
    }
    
    .products-scrollable-container::-webkit-scrollbar-thumb,
    .cart-container::-webkit-scrollbar-thumb {
      background: #c1c1c1;
      border-radius: 4px;
    }
    
    .products-scrollable-container::-webkit-scrollbar-thumb:hover,
    .cart-container::-webkit-scrollbar-thumb:hover {
      background: #a1a1a1;
    }
    
    /* Make card containers take full height */
    .h-100 {
      height: 100%;
    }
    
    .d-flex.flex-column {
      height: 100%;
    }
    
    /* Fixed category bar */
    .categories-container {
      position: sticky;
      top: 0;
      background-color: white;
      z-index: 10;
      padding-bottom: 10px;
      border-bottom: 1px solid #eee;
    }
  </style>
</head>

<body class="bg-gray-100">
  {{> sidebar}}
  
  <!-- Main Content -->
  <div class="main-content">
      <nav class="navbar navbar-expand-lg mb-4 p-3">
        <div class="container-fluid px-0">
          <div class="d-flex align-items-center">
            <button class="menu-toggle" id="menuToggle">
              <i class="fas fa-bars"></i>
            </button>
            <h4 class="font-weight-bold mb-0">Point of Sale</h4>
          </div>
          <div class="ms-auto d-flex align-items-center">
            <span id="current-time" class="me-3 text-sm d-none d-md-block"></span>
            <span class="font-weight-bold">Cashier: {{user.username}}</span>
          </div>
        </div>
      </nav>

      <!-- POS Content -->
      <div class="row g-4">
        <!-- Left Side - Product Selection -->
        <div class="col-lg-8">
          <div class="card border shadow-xs mb-4 h-100">
            <div class="card-header border-bottom pb-0">
              <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
                <div class="mb-3 mb-md-0">
                  <h6 class="font-weight-semibold text-lg mb-0">Products</h6>
                  <p class="text-sm text-muted mb-0">Select products to add to cart</p>
                </div>
                <div class="input-group input-group-sm" style="max-width: 300px;">
                  <span class="input-group-text bg-white border-end-0">
                    <i class="fas fa-search"></i>
                  </span>
                  <input type="text" class="form-control border-start-0 ps-0" id="product-search" placeholder="Search products...">
                </div>
              </div>
            </div>
            <div class="card-body p-0 d-flex flex-column">
              <!-- Categories - Fixed at top of scrollable area -->
              <div class="categories-container p-3">
                <div class="d-flex flex-wrap" id="categories">
                  <button class="btn btn-sm category-btn me-2 mb-2 active" data-category="all">All</button>
                  {{#each categories}}
                    <button class="btn btn-sm category-btn me-2 mb-2" data-category="{{this}}">{{this}}</button>
                  {{/each}}
                </div>
              </div>
              
              <!-- Products Grid - Scrollable -->
              <div class="products-scrollable-container p-3">
                <div class="row row-cols-2 row-cols-md-3 row-cols-xl-4 g-3 product-grid" id="products-container">
                  {{#if products.length}}
                    {{#each products}}
                      <div class="col product-item" data-category="{{this.category.name}}">
                        <div class="card h-100 product-card" data-id="{{this.id}}" data-name="{{this.name}}" data-price="{{this.sellingPrice}}" data-stock="{{this.stock}}">
                          <div class="card-body p-3">
                            {{#if (lessThan this.stock 5)}}
                              <span class="stock-indicator stock-low">Stock: {{this.stock}}</span>
                            {{else}}
                              <span class="stock-indicator">Stock: {{this.stock}}</span>
                            {{/if}}
                            <div class="product-image">
                              <i class="fas fa-box fa-2x text-secondary"></i>
                            </div>
                            <h6 class="card-title mb-1 text-truncate">{{this.name}}</h6>
                            <div class="d-flex justify-content-between align-items-center">
                              <p class="card-text mb-0 text-dark font-weight-bold">Rp{{formatPrice this.sellingPrice}}</p>
                            </div>
                          </div>
                        </div>
                      </div>
                    {{/each}}
                  {{else}}
                    <div class="col-12 text-center py-5">
                      <p>No products found.</p>
                    </div>
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Right Side - Cart -->
        <div class="col-lg-4">
          <div class="card border shadow-xs mb-4 h-100">
            <div class="card-header border-bottom pb-0">
              <div class="d-flex justify-content-between align-items-center">
                <h6 class="font-weight-semibold text-lg mb-0">Current Transaction</h6>
                <button class="btn btn-sm btn-danger" id="clear-cart">
                  <i class="fas fa-trash me-1"></i> Clear
                </button>
              </div>
            </div>
            <div class="card-body p-0 d-flex flex-column">
              <!-- Customer Info -->
              <div class="p-3 border-bottom">
                <div class="d-flex align-items-center mb-2">
                  <button class="btn btn-sm btn-outline-primary me-2" id="member-search-btn" data-bs-toggle="modal" data-bs-target="#memberModal">
                    <i class="fas fa-user me-1"></i> Select Member
                  </button>
                  <span id="selected-member" class="text-sm">No member selected</span>
                </div>
                <div class="row g-2">
                  <div class="col-md-6">
                    <input type="text" class="form-control form-control-sm" id="customer-name" placeholder="Customer Name">
                  </div>
                  <div class="col-md-6">
                    <input type="tel" class="form-control form-control-sm" id="customer-phone" placeholder="Phone">
                  </div>
                </div>
              </div>
              
              <!-- Cart Items - Scrollable -->
              <div class="cart-container" id="cart-items">
                <div class="text-center py-5 text-muted">
                  <i class="fas fa-shopping-cart fa-3x mb-3"></i>
                  <p>Cart is empty</p>
                  <p class="text-sm">Add products by clicking on items from the left panel</p>
                </div>
              </div>
              
              <!-- Totals - Fixed at bottom -->
              <div class="p-3 border-top mt-auto">
                <div class="d-flex justify-content-between mb-2">
                  <span class="text-sm">Subtotal:</span>
                  <span id="subtotal" class="text-sm font-weight-bold">Rp0.00</span>
                </div>
                <div class="d-flex justify-content-between mb-2" style="display: none !important;">
                  <span class="text-sm">Discount:</span>
                  <span class="d-flex align-items-center">
                    <input type="number" class="form-control form-control-sm text-end" 
                          id="discount-amount" style="max-width: 80px;" value="0">
                    <button class="btn btn-sm btn-outline-primary ms-2" id="apply-discount">Apply</button>
                  </span>
                </div>
                <input type="hidden" id="discount-amount" value="0">
                <div class="d-flex justify-content-between mb-2">
                  <span class="text-sm">Tax (10%):</span>
                  <span id="tax-amount" class="text-sm font-weight-bold">Rp0.00</span>
                </div>
                <div class="d-flex justify-content-between mb-2" style="display: none !important;">
                  <span class="text-sm">Promotion:</span>
                  <div class="d-flex align-items-center">
                    <button class="btn btn-sm btn-outline-primary me-2" id="select-promotion-btn" data-bs-toggle="modal" data-bs-target="#promotionModal">
                      <i class="fas fa-tags me-1"></i> Select
                    </button>
                    <span class="text-sm" id="selected-promotion">None</span>
                  </div>
                </div>
                <div class="d-flex justify-content-between mb-3">
                  <span class="font-weight-bold">TOTAL:</span>
                  <span class="font-weight-bold fs-5 text-primary" id="grand-total">Rp0.00</span>
                </div>
                
                <!-- Payment Methods -->
                <div class="mb-3">
                  <label class="form-label text-sm">Payment Method:</label>
                  <div class="d-flex flex-wrap gap-2">
                    <button class="btn btn-outline-primary payment-method-btn flex-grow-1 active" data-method="cash">
                      <i class="fas fa-money-bill me-1"></i> Cash
                    </button>
                    <button class="btn btn-outline-primary payment-method-btn flex-grow-1" data-method="credit_card">
                      <i class="fas fa-credit-card me-1"></i> Credit
                    </button>
                    <button class="btn btn-outline-primary payment-method-btn flex-grow-1" data-method="debit_card">
                      <i class="fas fa-credit-card me-1"></i> Debit
                    </button>
                    <button class="btn btn-outline-primary payment-method-btn flex-grow-1" data-method="digital_wallet">
                      <i class="fas fa-wallet me-1"></i> Digital
                    </button>
                  </div>
                </div>
                
                <div class="mb-3" id="payment-reference-container" style="display: none;">
                  <label class="form-label text-sm">Payment Reference:</label>
                  <input type="text" class="form-control form-control-sm" id="payment-reference" placeholder="Enter reference number">
                </div>
                
                <div class="mb-3">
                  <label class="form-label text-sm">Note:</label>
                  <textarea class="form-control form-control-sm" id="transaction-note" rows="2"></textarea>
                </div>
                
                <!-- Complete Transaction Button -->
                <div class="d-grid">
                  <button class="btn btn-primary" id="complete-transaction">
                    <i class="fas fa-check-circle me-2"></i>Complete Transaction
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
  
  <!-- Member Selection Modal -->
  <div class="modal fade" id="memberModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Select Member</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="input-group mb-3">
            <input type="text" class="form-control" id="member-search" placeholder="Search by name, email or phone...">
            <button class="btn btn-outline-primary" type="button" id="search-member-btn">Search</button>
          </div>
          <div id="member-search-results" class="list-group">
            <!-- Member search results will be populated here -->
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Quantity Modal -->
  <div class="modal fade" id="quantityModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add to Cart</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="text-center mb-4">
            <h6 id="quantity-product-name" class="mb-3"></h6>
            <div class="input-group mb-3 justify-content-center">
              <button class="btn btn-outline-primary" id="decrease-qty">-</button>
              <input type="number" class="form-control text-center" id="quantity-input" min="1" value="1" style="max-width: 100px;">
              <button class="btn btn-outline-primary" id="increase-qty">+</button>
            </div>
            <p class="text-muted mb-0">Available stock: <span id="quantity-stock"></span></p>
          </div>
          
          <!-- Promotions section -->
          <div class="promotions-section mt-4">
            <h6 class="mb-3">Available Promotions</h6>
            <div id="applicable-promotions" class="list-group">
              <!-- Promotions will be loaded here -->
              <div class="text-center py-2">
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                <span class="ms-2">Loading promotions...</span>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="confirm-quantity">Add to Cart</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Promotion Selection Modal -->
  <div class="modal fade" id="promotionModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Select Promotion</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="input-group mb-3">
            <input type="text" class="form-control" id="voucher-code" placeholder="Enter voucher code">
            <button class="btn btn-outline-primary" type="button" id="apply-voucher-btn">Apply</button>
          </div>
          <div class="mb-3">
            <h6 class="text-sm font-weight-bold mb-2">Available Promotions</h6>
            <div id="promotions-list" class="list-group">
              <!-- Promotions will be loaded here -->
              <div class="text-center py-3">
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                <span class="ms-2">Loading promotions...</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Core JS Files -->
  <script src="/js/core/popper.min.js"></script>
  <script src="/js/core/bootstrap.min.js"></script>

  {{> pos}}
  
  <script>
    // Add JavaScript to toggle the sidebar-collapsed class on body
    document.getElementById('menuToggle').addEventListener('click', function() {
      document.body.classList.toggle('sidebar-collapsed');
    });

    // Initialize current time display
    function updateTime() {
      const now = new Date();
      const options = { 
        weekday: 'short', 
        year: 'numeric', 
        month: 'short', 
        day: 'numeric',
        hour: '2-digit', 
        minute: '2-digit'
      };
      document.getElementById('current-time').textContent = now.toLocaleDateString('en-US', options);
    }
    
    updateTime();
    setInterval(updateTime, 60000); // Update every minute
    
    // Adjust scrollable container heights on window resize
    window.addEventListener('resize', function() {
      adjustContainerHeights();
    });
    
    function adjustContainerHeights() {
      // Adjust product container height based on viewport
      const viewportHeight = window.innerHeight;
      const productsContainer = document.querySelector('.products-scrollable-container');
      if (productsContainer) {
        // Responsive height based on screen size
        if (window.innerWidth < 768) {
          productsContainer.style.height = 'calc(100vh - 300px)';
        } else {
          productsContainer.style.height = 'calc(100vh - 250px)';
        }
      }
    }
    
    // Run once on page load
    document.addEventListener('DOMContentLoaded', function() {
      adjustContainerHeights();
    });
  </script>
</body>
</html>