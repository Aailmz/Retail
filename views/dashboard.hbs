<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>{{title}}</title>
  
  <!-- Fonts and icons -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Noto+Sans:300,400,500,600,700,800|PT+Mono:300,400,500,600,700" rel="stylesheet" />
  
  <!-- CSS Files -->
  <link id="pagestyle" href="/css/corporate-ui-dashboard.css" rel="stylesheet" />
  
  {{> style}}
</head>

<body class="bg-gray-100">
  {{> sidebar}}
  <!-- Main Content -->
  <div class="main-content bg-gray-100">
    <nav class="navbar navbar-expand-lg mb-4 p-3">
      <div class="container-fluid px-0">
        <div class="d-flex align-items-center">
          <button class="menu-toggle" id="menuToggle">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="3" y1="12" x2="21" y2="12"></line>
              <line x1="3" y1="6" x2="21" y2="6"></line>
              <line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
          </button>
          <h4 class="font-weight-bold mb-0">Dashboard</h4>
        </div>
        <div class="ms-auto">
          <span class="font-weight-bold d-none d-sm-inline">Welcome, {{user.username}}</span>
          <span class="d-inline d-sm-none">{{user.username}}</span>
        </div>
      </div>
    </nav>
    
    <!-- Notification Banner -->
    {{#if notification}}
    <div class="container-fluid px-0 mb-4">
      <div class="alert alert-{{notification.type}} alert-dismissible fade show" role="alert">
        {{notification.message}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
    {{/if}}
    
    <!-- Error Message -->
    {{#if error}}
    <div class="container-fluid px-0 mb-4">
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{error}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
    {{/if}}
    
    <!-- Dashboard Content -->
    <div class="container-fluid px-0">
      <!-- Summary Cards -->
      <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
          <div class="card border shadow-xs card-stats">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-uppercase font-weight-bold">Today's Sales</p>
                    <h5 class="font-weight-bolder mb-0">{{todaySales}}</h5>
                    <p class="mb-0 text-success">
                      <span class="font-weight-bolder">{{salesPercentChange}}%</span> vs yesterday
                    </p>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white">
                      <rect x="2" y="5" width="20" height="14" rx="2"></rect>
                      <line x1="2" y1="10" x2="22" y2="10"></line>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
          <div class="card border shadow-xs card-stats">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-uppercase font-weight-bold">Transactions</p>
                    <h5 class="font-weight-bolder mb-0">{{totalTransactions}}</h5>
                    <p class="mb-0 text-success">
                      <span class="font-weight-bolder">+{{transactionPercentChange}}%</span> this week
                    </p>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-success shadow text-center border-radius-md">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white">
                      <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
                      <polyline points="17 6 23 6 23 12"></polyline>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
          <div class="card border shadow-xs card-stats">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-uppercase font-weight-bold">Low Stock Items</p>
                    <h5 class="font-weight-bolder mb-0">{{lowStockItems}}</h5>
                    <p class="mb-0 text-danger">
                      <span class="font-weight-bolder">{{lowStockPercentChange}}%</span> vs last month
                    </p>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-warning shadow text-center border-radius-md">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white">
                      <path d="M20 12V8H6a2 2 0 0 1-2-2c0-1.1.9-2 2-2h12v4"></path>
                      <path d="M4 6v12c0 1.1.9 2 2 2h14v-4"></path>
                      <path d="M18 12a2 2 0 0 0 0 4h4v-4h-4z"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
          <div class="card border shadow-xs card-stats">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-uppercase font-weight-bold">Active Members</p>
                    <h5 class="font-weight-bolder mb-0">{{activeMembers}}</h5>
                    <p class="mb-0 text-success">
                      <span class="font-weight-bolder">+{{memberPercentChange}}%</span> this month
                    </p>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white">
                      <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                      <circle cx="9" cy="7" r="4"></circle>
                      <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                      <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
        <!-- Recent Transactions Table -->
        <div class="col-lg-8 mb-4">
          <div class="card border shadow-xs">
            <div class="card-header border-bottom pb-0">
              <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
                <div class="mb-3 mb-md-0">
                  <h6 class="font-weight-semibold text-lg mb-0">Recent Transactions</h6>
                  <p class="text-sm mb-0">Latest transactions in your system</p>
                </div>
                <div class="d-flex">
                  <a href="/transactions" class="btn btn-sm btn-white me-2">
                    View All
                  </a>
                  <a href="/transactions/create" class="btn btn-sm btn-dark">
                    New Transaction
                  </a>
                </div>
              </div>
            </div>
            <div class="card-body px-0 py-0">
              <div class="table-responsive p-0">
                <table class="table align-items-center justify-content-center mb-0">
                  <thead class="bg-gray-100">
                    <tr>
                      <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-3">Transaction</th>
                      <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-2">Customer</th>
                      <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-2">Amount</th>
                      <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-2">Payment</th>
                      <th class="text-secondary text-xs font-weight-semibold opacity-7 ps-2">Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each recentTransactions}}
                    <tr>
                      <td>
                        <div class="d-flex px-3">
                          <div class="my-auto">
                            <h6 class="mb-0 text-sm">
                              <a href="/transactions/{{this.id}}">#{{this.transactionCode}}</a>
                            </h6>
                          </div>
                        </div>
                      </td>
                      <td>
                        <p class="text-sm font-weight-normal mb-0">
                          {{#if this.customerName}}
                            {{this.customerName}}
                          {{else if this.member}}
                            {{this.member.name}}
                          {{else}}
                            Guest
                          {{/if}}
                        </p>
                      </td>
                      <td>
                        <p class="text-sm font-weight-normal mb-0">${{this.grandTotal}}</p>
                      </td>
                      <td>
                        <p class="text-sm font-weight-normal text-capitalize mb-0">{{this.paymentMethod}}</p>
                      </td>
                      <td>
                        <div class="d-flex align-items-center">
                          {{#if this.isVoided}}
                          <span class="badge bg-danger">Voided</span>
                          {{else}}
                          <span class="badge bg-success">Completed</span>
                          {{/if}}
                        </div>
                      </td>
                    </tr>
                    {{/each}}
                    
                    {{#unless recentTransactions.length}}
                    <tr>
                      <td colspan="5" class="text-center py-4">
                        <p class="text-sm font-weight-normal mb-0">No transactions found</p>
                      </td>
                    </tr>
                    {{/unless}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Quick Actions and Payment Methods -->
        <div class="col-lg-4">
          <!-- Quick Actions Card -->
          <div class="card border shadow-xs mb-4">
            <div class="card-header border-bottom pb-0">
              <h6 class="font-weight-semibold text-lg mb-0">Quick Actions</h6>
              <p class="text-sm mb-0">Commonly used functions</p>
            </div>
            <div class="card-body">
              <div class="list-group">
                <a href="/transactions/create" class="list-group-item list-group-item-action border-0 py-3">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <h6 class="mb-1 font-weight-semibold">New Transaction</h6>
                      <p class="mb-0 text-sm">Create a new sales transaction</p>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="18px" height="18px" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <circle cx="12" cy="12" r="10"/>
                      <line x1="12" y1="8" x2="12" y2="16"/>
                      <line x1="8" y1="12" x2="16" y2="12"/>
                    </svg>
                  </div>
                </a>
                
                <a href="/pos" class="list-group-item list-group-item-action border-0 py-3">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <h6 class="mb-1 font-weight-semibold">Point of Sale</h6>
                      <p class="mb-0 text-sm">Quick sales processing</p>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="18px" height="18px" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <rect x="2" y="5" width="20" height="14" rx="2"/>
                      <line x1="2" y1="10" x2="22" y2="10"/>
                    </svg>
                  </div>
                </a>
                
                <a href="/products" class="list-group-item list-group-item-action border-0 py-3">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <h6 class="mb-1 font-weight-semibold">Manage Products</h6>
                      <p class="mb-0 text-sm">Inventory control</p>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="18px" height="18px" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path d="M20 12V8H6a2 2 0 0 1-2-2c0-1.1.9-2 2-2h12v4"></path>
                      <path d="M4 6v12c0 1.1.9 2 2 2h14v-4"></path>
                      <path d="M18 12a2 2 0 0 0 0 4h4v-4h-4z"></path>
                    </svg>
                  </div>
                </a>
                
                <a href="/transactions/reports" class="list-group-item list-group-item-action border-0 py-3">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <h6 class="mb-1 font-weight-semibold">Sales Reports</h6>
                      <p class="mb-0 text-sm">View analytics and reports</p>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="18px" height="18px" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <rect x="3" y="3" width="18" height="18" rx="2"/>
                      <line x1="3" y1="9" x2="21" y2="9"/>
                      <line x1="9" y1="3" x2="9" y2="21"/>
                    </svg>
                  </div>
                </a>
              </div>
            </div>
          </div>
          
          <!-- Payment Method Breakdown -->
          <div class="card border shadow-xs">
            <div class="card-header border-bottom pb-0">
              <h6 class="font-weight-semibold text-lg mb-0">Payment Methods</h6>
              <p class="text-sm mb-0">Transaction payment breakdown</p>
            </div>
            <div class="card-body">
              <div class="chart-container">
                <canvas id="paymentMethodChart" height="220"></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Core JS Files -->
  <script src="/js/core/popper.min.js"></script>
  <script src="/js/core/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js"></script>
  
  {{> script}}
  
  <script>
    // Payment Method Chart
    document.addEventListener('DOMContentLoaded', function() {
      const ctx = document.getElementById('paymentMethodChart').getContext('2d');
      
      const paymentMethodChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
          labels: ['Cash', 'Credit Card', 'Debit Card', 'Bank Transfer', 'Digital Wallet'],
          datasets: [{
            data: [{{paymentMethodData}}],
            backgroundColor: [
              '#4CAF50', // Cash
              '#2196F3', // Credit Card
              '#FF9800', // Debit Card
              '#9C27B0', // Bank Transfer
              '#03A9F4'  // Digital Wallet
            ],
            borderWidth: 2,
            borderColor: '#fff'
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          cutout: '70%',
          plugins: {
            legend: {
              position: 'bottom',
              labels: {
                padding: 20,
                font: {
                  size: 12
                }
              }
            }
          }
        }
      });
    });
    
    // Menu Toggle
    document.getElementById('menuToggle').addEventListener('click', function() {
      document.body.classList.toggle('sidebar-collapsed');
    });
  </script>
</body>
</html>